create table passwordBinnacle
(
    binnacle_id NUMBER(6),
    new_password varchar2(25),
    creation_date DATE,
    creation_user VARCHAR2(10)
);

alter table passwordBinnacle
add constraint pk_passwordBinnacle primary key(binnacle_id)
using index tablespace gen_ind pctfree 20
storage(initial 10k next 10k pctincrease 0);



ALTER TABLE passwordBinnacle
modify new_password constraint new_password_nn NOT NULL;

create sequence s_binnacle
start with 0
increment by 1
minvalue 0
maxvalue 10000000000;

CREATE OR REPLACE TRIGGER gen.beforeINSERTpasswordBinnacle
BEFORE INSERT
ON gen.passwordBinnacle
FOR EACH ROW
BEGIN
    :new.creation_date:=SYSDATE;
    :new.creation_user:=USER;
    :new.binnacle_id:=s_binnacle.nextval;
END beforeINSERTpasswordBinnacle;


