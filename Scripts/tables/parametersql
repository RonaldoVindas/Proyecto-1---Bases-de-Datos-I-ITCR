Create table parameterVals
(
parameterVals_id number(8),
parameter_value varchar2(25),
parameter_name varchar2(25),
creation_date DATE,
creation_user VARCHAR2(10),
date_last_modification DATE,
user_last_modification VARCHAR2(10)
);

alter table parameterVals
add constraint pk_parameterVals primary key(parameterVals_id)
using index tablespace gen_ind pctfree 20
storage(initial 10k next 10k pctincrease 0);

ALTER TABLE parameterVals
modify parameter_value constraint parameter_value_nn NOT NULL;


ALTER TABLE parameterVals
modify parameter_name  constraint parameter_name_nn NOT NULL;

create sequence s_parameterVals
start with 0
increment by 1
minvalue 0
maxvalue 10000000;

cREATE OR REPLACE TRIGGER gen.beforeINSERTparameterVals
BEFORE INSERT
ON gen.parameterVals
FOR EACH ROW
BEGIN
    :new.creation_date:=SYSDATE;
    :new.creation_user:=USER;
    :new.parameterVals_id:=s_parameterVals.nextval;
END beforeINSERTparameterVals;

/

CREATE OR REPLACE TRIGGER gen.beforeUPDATEparameterVals
BEFORE UPDATE
ON gen.parameterVals
FOR EACH ROW
BEGIN
    :new.date_last_modification:=SYSDATE;
    :new.user_last_modification:=USER;
END beforeUPDATEparameterVals;
